<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MechMate.MyRepairsPage"
            xmlns:local="clr-namespace:MechMate.Models"
            xmlns:viewmodel="clr-namespace:MechMate.ViewModels"
            x:DataType="viewmodel:MyRepairsPageViewModel"
            Title="My Repairs">
    <ScrollView>
        <VerticalStackLayout>
            <Label Text="{Binding VehicleName}"
        FontAttributes="Bold"
        FontSize="20"
        TextColor="#222"
        HorizontalOptions="Center"/>

            <Label Text="{Binding VehicleVIN}"
        FontSize="14"
        TextColor="#555"
        HorizontalOptions="Center"/>
            <BoxView Grid.Row="1" Grid.ColumnSpan="2" Color="Black" HeightRequest="1"/>
        
			<!-- Existing Labels and BoxView -->

			<CollectionView ItemsSource="{Binding Repairs}"
							SelectionMode="None">
				<!-- Or "Single" if you want to select repairs -->
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<!-- Define how each repair item is displayed -->
						<VerticalStackLayout Padding="10">
							<Label Text="{Binding Description}" FontSize="16" FontAttributes="Bold"/>
							<Label Text="{Binding Date, StringFormat='Date: {0:d}'}" FontSize="12" TextColor="#555"/>
							<Label Text="{Binding Cost, StringFormat='Cost: {0:C}'}" FontSize="12" TextColor="#555"/>
							<!-- Add more elements to display other repair details -->
						</VerticalStackLayout>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

		</VerticalStackLayout>

	</ScrollView>
</ContentPage>
